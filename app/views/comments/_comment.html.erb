<div class="row group" id="comment-<%= comment.id %>">
  <div class="col-md-2">
    <span class="pull-right">
      <%= link_to gravatar_for comment.user, size: 25 %>
    </span>
  </div>
  <div class="col-md-8">
    <b><%= link_to comment.user.name, comment.user %></b>
    <%= comment.content %>
    <br/>
    <h6><%= time_ago_in_words comment.created_at %>. </h6>
  </div>
  <div class="col-md-2 action" style="display:none;">
    <% if current_user? comment.user %>
      <%= link_to micropost_comment_path(comment.micropost, comment),
        method: :delete, data: {confirm: "Are you sure?"}, remote: true do %>
        <i class="fa fa-trash-o"></i>
      <% end %>
    <% end %>
  </div>
</div>
<script>
  $('#comment-<%= comment.id %>').hover(function () {
    $(this).find('.action').show()
  },function () {
    $(this).find('.action').hide()
  });
</script>
