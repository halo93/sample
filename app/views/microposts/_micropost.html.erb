<li id="micropost-<%= micropost.id %>">
  <div class="post-header">
    <%= link_to gravatar_for(micropost.user, size: 35), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="timestamp">
    <%= t "micropost.posted" %> <%= time_ago_in_words micropost.created_at %> <%= t "micropost.ago" %>.
      <% if current_user? micropost.user %>
      <%= link_to t("pages.users.delete.del"), micropost, method: :delete,
        data:{confirm: t("confirm")}, remote: true %>
    <% end %>
  </span>
  </div>
  <span class="content">
    <%= image_tag micropost.picture.url if micropost.picture? %>
    <div class="main-content">
      <%= micropost.content %>
    </div>
  </span>
  <div class="row group">
    <div class="col-md-6 group-mem">
      <a href="#"><i class="fa fa-thumbs-up fa-lg"></i> Like</a>
    </div>
    <div class="col-md-6 group-mem">
      <a id="com-<%= micropost.id %>" class="comment"><i class="fa fa-comments fa-lg"></i> Comment</a>
    </div>
  </div>
  <% micropost.comments.each do |comment| %>
      <%= render comment %>
  <% end %>
  <div class="row group comment-<%= micropost.id %>" style="display: none;">
    <%= render "shared/comment_form", micropost: micropost %>
  </div>
  <script>
    $(document).ready(function() {
      $('#com-<%= micropost.id %>').click(function () {
        $('.comment-<%= micropost.id %>').slideToggle('slow');
      });
    });
  </script>
</li>

